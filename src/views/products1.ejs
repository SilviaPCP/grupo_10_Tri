<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <%= products[1].name%>

    			<!-- Show the "in-sale" products -->
			<% inSale.forEach(function(product){ 
				let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0)
			%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%= product.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= product.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<%= toThousand(finalPrice) %></h2>
							<span><%= product.discount %>% OFF</span>
							<p><%= product.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		
</body>

</html>