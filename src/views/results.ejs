<!DOCTYPE html>
<html lang="en">
<!--Includes HEAD-->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>

    <body>
        <!--Includes HEADER-->
        <%- include('partials/header') %>

            <!--All products-->
            <main class="container">
                <section class="offers">
                    <h2>Resultados de la búsqueda:
                        <%= search %>
                    </h2>
                    <div class="products">
                        <% if (products.length > 0) {
                            products.forEach(function(product){  
                                let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0) 
                                %>
                            <article>
                                <a href="/products/detail/<%= product.id %>"><img src="/images/products/<%= product.image %>" alt="Imagen del producto"></a>
                                <div class="main-article">
                                    <% if (product.category == "swim") { %>
                                        <i class="fas fa-swimmer"></i>
                                        <% } else if(product.category == "run") { %>
                                            <i class="fas fa-running"></i>
                                            <% } else { %>
                                                <i class="fas fa-biking"></i>
                                                <% } %>
                                                    <div class="container01">
                                                        <p class="price">
                                                            <% if (product.price != null) { %>
                                                                $
                                                                <%= product.price %>
                                                                    <% } else { %>
                                                                        $0
                                                                        <% } %>
                                                        </p>
                                                        <p class="discount">
                                                            <% if (product.discount != null) { %>
                                                                <%= product.discount %>% off
                                                                    <% } else { %>
                                                                        0% off
                                                                        <% } %>
                                                        </p>
                                                    </div>
                                                    <p class="description">
                                                        <%= product.name %>
                                                    </p>
                                </div>
                            </article>
                            <% })} else { %>
                                <h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
                                <% } %>
                    </div>
                </section>
            </main>

            <!--Includes footer-->
            <%- include('partials/footer') %>
    </body>

</html>