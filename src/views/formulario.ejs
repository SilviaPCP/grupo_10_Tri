<!DOCTYPE html>
<html lang="en">

<!--Partial del head-->
<%- include('partials/head', {title: 'Formulario'}) %>

    <!--Se dejaron afuera las ccs propias de la pagina-->
    <link rel="stylesheet" href="/css/style_formulario.css">
    <link rel="stylesheet" href="/css/productForm.css">
    <link rel="stylesheet" href="/css/product.css">

    <title>Formulario</title>

    <header>
        <div class="top-header container">
            <a href="/users/login"><i class="fas fa-user"></i></a>
            <a href="/">
                <p>Triatlhon<span>Store</span></p>
            </a>
    </header>

    <body>

        <section >
            <ul class="mostrarFormulario errores"></ul>
            <form class="form" action="/users" method="POST" enctype="multipart/form-data">
                <div class="form-register">
                    <label for="nombre">Nombre:</label>
                    <input  class="form-camp" type="text" name="first_name" id="first_name" placeholder="Ingrese su Nombre" value="<%= locals.oldData ? oldData.first_name : null %>">
                    <% if (locals.errors && errors.first_name) { %>
                        <div class="text-danger">
                            <%= errors.first_name.msg %>
                        </div>
                    <% } %>
                    <label for="lastName">Apellido:</label>
                    <input  class="form-camp" type="text" name="last_name" id="last_name" placeholder="Ingrese su Apellido" value="<%= locals.oldData ? oldData.last_name : null %>">
                    <% if (locals.errors && errors.last_name) { %>
                        <div class="text-danger">
                            <%= errors.last_name.msg %>
                        </div>
                    <% } %>
                    <label for="email">Correo Electrónico:</label>
                    <input  class="form-camp" type="email" name="email" id="email" placeholder="Ingrese su Correo" value="<%= locals.oldData ? oldData.email : null %>">
                    <% if (locals.errors && errors.email) { %>
                        <div class="text-danger">
                            <%= errors.email.msg %>
                        </div>
                    <% } %>
                    <label for="password">Password:</label>
                    <input class="form-camp" type="password" name="password" id="password" placeholder="Ingrese su contraseña" >
                    <% if (locals.errors && errors.password) { %>
                        <div class="text-danger">
                            <%= errors.password.msg %>
                        </div>
                    <% } %>
                    <label for="password2">Confirmación de password:</label>
                    <input class="form-camp" type="password" name="password2" id="password2" placeholder="Ingrese otra vez su contraseña">
                    <label for="genero">Selecciona tu género:</label>
                    <select class="form-camp" name="gender" id="gender" placeholder="Género">
                        <option value="sinSelección" selected>Selecciona género</option>
                        <option value="femenino">Femenino</option>
                        <option value="masculino">Masculino</option>
                    </select>
                    <label for="date">Ingresa tu fecha de Nacimiento:</label>
                    <input class="form-camp" type="date" name="date" id="date" value="<%= locals.oldData ? oldData.date : null %>">
                    <% if (locals.errors && errors.date) { %>
                        <div class="text-danger">
                            <%= errors.date.msg %>
                        </div>
                    <% } %>
                    <label for="imagen">Imagen de usuario:</label>
                    <input class="form-camp" type="file" name="image" id="image">
                    <% if (locals.errors && errors.image) { %>
                        <div class="text-danger">
                            <%= errors.image.msg %>
                        </div>
                    <% } %>
                    <label ><input type="checkbox"> Estoy de acuerdo con términos y condiciones</label>
                    <button type="submit" class="form-input b-margin">Guardar</button>
                    <button type="reset" class="form-input b-margin">Limpiar</button>
                </div>
            </form>
        </section>

        <!--Partial del footer desde social media-->
        <%- include ('partials/footer')%>
        <script src="/js/usersValidator.js"></script> 
    </body>
</html>