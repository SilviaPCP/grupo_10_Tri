<!DOCTYPE html>
<html lang="en">
<!--Partial del head-->
<%- include('../partials/head', {title: 'Vender'}) %>
    <!--Se dejaron afuera las ccs propias de la pagina-->
    <link rel="stylesheet" href="/css/productsForm.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/style_formulario.css">

    <body>
        <%- include('../partials/header') %>
            <main>

                <div class="headProd">
                    <h1> Alta de Productos</h1>

                    <form action="/products" method="POST" enctype="multipart/form-data">
                        <div class="formProd">

                            <label for="producto">Nombre del producto:</label>
                            <input class="form-camp" type="text" id="product_name" name="product_name" placeholder="Ej: Zapatillas Reebok" value="<%= locals.oldData ? oldData.product_name : null %>">
                            <% if (locals.errors && errors.product_name) { %>
                                <div class="text-danger">
                                    <%= errors.product_name.msg %>
                                </div>
                            <% } %>

                            <label for="precio">Precio:</label>
                            <input class="form-camp" type="number" id="price" name="price" placeholder="Ej: 5678" min="1" step="1" value="<%= locals.oldData ? oldData.price : null %>">
                            <% if (locals.errors && errors.price) { %>
                                <div class="text-danger">
                                    <%= errors.price.msg %>
                                </div>
                            <% } %>

                            <label for="discount" class="form-label">Descuento:</label>
                            <input class="form-camp" type="number" id="discount" name="discount" placeholder="Ej: 15" min="1" step="1" value="<%= locals.oldData ? oldData.discount : null %>">
                            <% if (locals.errors && errors.discount) { %>
                                <div class="text-danger">
                                    <%= errors.discount.msg %>
                                </div>
                            <% } %>

                            <label for="category" class="form-label">Categoría:</label>
                            <select class="form-camp" name="category" id="category">
                                <option disabled selected>Elige categoria</option>
                                <option value="swim">Natación</option>
                                <option value="bike">Ciclismo</option>
                                <option value="run">Carrera</option>
						    </select>
                            <% if (locals.errors && errors.category) { %>
                                <div class="text-danger">
                                    <%= errors.category.msg %>
                                </div>
                            <% } %>

                            <label for="description">Descripción del producto:</label>
                            <textarea class="form-camp t-height" name="description" id="description" value="<%= locals.oldData ? oldData.description : null %>"></textarea>
                            <% if (locals.errors && errors.description) { %>
                                <div class="text-danger">
                                    <%= errors.description.msg %>
                                </div>
                            <% } %>

                            <label for="color">Color </label>
                            <input class="form-camp" type="text" id="color" name="color" placeholder="Ej: Azul" value="<%= locals.oldData ? oldData.color : null %>">
                            <% if (locals.errors && errors.color) { %>
                                <div class="text-danger">
                                    <%= errors.color.msg %>
                                </div>
                            <% } %>

                            <label for="size">Talla </label>
                            <input class="form-camp" type="text" id="size" name="size" placeholder="Ej: Chica" value="<%= locals.oldData ? oldData.size : null %>">
                            <% if (locals.errors && errors.size) { %>
                                <div class="text-danger">
                                    <%= errors.size.msg %>
                                </div>
                            <% } %>

                            <label for="imagen">Imagen del producto</label>
                            <input class="form-camp" type="file" name="image" id="image">

                            <div class="b-container">
                                <button type="submit" class="form-input b-margin">Guardar producto</button>
                                <button type="reset" class="form-input b-margin">Limpiar</button>
                            </div>

                        </div>
                    </form>

                </div>

            </main>
        <script src="/public/js/productsValidator.js"></script> 
    </body>
</html>